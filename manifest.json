{
  "manifest_version": 3,
  "name": "Chat Assistant",
  "version": "1.0",
  "description": "Provides a chat assistant related to web pages.",
  "permissions": ["activeTab", "tabs", "contextMenus", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["output.css"]
    }
  ],
  "action": {},
  "icons": {},
  "web_accessible_resources": [
    {
      "resources": ["chat.html", "options.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options.html"
}
